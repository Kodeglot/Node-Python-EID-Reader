{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./examples",
    "rootDir": "./examples",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": false,
    "moduleResolution": "node",
    "types": ["node", "electron"]
  },
  "include": ["examples/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
} 